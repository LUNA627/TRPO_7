<Window x:Class="prack6_TRPO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prack6_TRPO"
        mc:Ignorable="d"
        Title="MainWindow" Height="770" Width="1900">

    <Grid Margin="10,10,10,10" HorizontalAlignment="Left">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="520"/>
      
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>


        <Border Grid.Column="0" Grid.Row="1" BorderBrush="Black" BorderThickness="2" Margin="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <Label Content="Фамилия" HorizontalAlignment="Left" VerticalAlignment="Center"  />
                    <Label Content="Имя"  HorizontalAlignment="Left" VerticalAlignment="Center" />
                    <Label Content="Отчество"  HorizontalAlignment="Left" VerticalAlignment="Center"  />
                    <Label Content="Профессия"  HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Label Content="Пароль" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Label Content="Подтверждение пароля" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel>
                    <TextBox Text="{Binding RegDoctor.Name}" Margin="0,5,15,0" VerticalAlignment="Center"  HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding RegDoctor.LastName}" Margin="0,10,15,0"  HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding RegDoctor.MiddleName}" Margin="0,10,15,0"   HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding RegDoctor.Specialisation}"  Margin="0,5,15,0"   HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding RegDoctor.Password}" HorizontalAlignment="Left" Width="350" VerticalAlignment="Center"  Margin="0, 5, 15, 5"/>
                    <TextBox Text="{Binding RegDoctor.RepeatPassword}" HorizontalAlignment="Left" Width="350" Margin="0, 5, 15, 5"/>
                    <Button Content="Сохранить" VerticalAlignment="Top" HorizontalAlignment="Right" Height="30" Width="110" Margin="0, 5, 20, 0" Click="Registration_Click" />
                </StackPanel>
            </StackPanel>
        </Border>


        <Border Grid.Column="0" Grid.Row="2" BorderBrush="Black" BorderThickness="2" Margin="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <Label Content="Идентификатор" />
                    <Label Content="Пароль"/>
                </StackPanel>

                <StackPanel>
                    <TextBox Text="{Binding LogDoctor.Id}"  Margin="5,5,15,5" HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding LogDoctor.Password}" Margin="5,5,15,5"  HorizontalAlignment="Left" Width="350"/>

                    <Button Content="Войти" VerticalAlignment="Top" HorizontalAlignment="Right" Height="30" Width="110" Margin="0, 5, 20, 0" Click="Login_Click" />
                </StackPanel>
            </StackPanel>
        </Border>


        <Border Grid.Column="0" Grid.Row="3" BorderBrush="Black" BorderThickness="2" Margin="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <Label Content="Идентификатор" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Label Content="Фамилия"  HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Label Content="Имя"  HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Label Content="Отчество" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Label Content="Профессия" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel>
                    <TextBox Text="{Binding ShowInfoDoctor.Id}" Margin="5,5,15,5" HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding ShowInfoDoctor.Name}"  Margin="5,5,15,5" HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding ShowInfoDoctor.LastName}"  Margin="5,5,15,5" HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding ShowInfoDoctor.MiddleName}"  Margin="5,5,15,5" HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding ShowInfoDoctor.Specialisation}"   Margin="5,5,15,5" HorizontalAlignment="Left" Width="350"/>
                </StackPanel>
            </StackPanel>
        </Border>





        <Border Grid.Column="1" Grid.Row="1" BorderBrush="Black" BorderThickness="2" Margin="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel VerticalAlignment="Top">
                    <Label Content="Id" FontSize="16" HorizontalAlignment="Left"/>
                </StackPanel>

                <StackPanel>
                    <TextBox Text="{Binding SearchPatientId}" Width="350" Height="20" Margin="5,5,15,5"/>
                    <Button Content="Найти" VerticalAlignment="Top" HorizontalAlignment="Right" Height="30" Width="110" Margin="0, 5, 20, 0" Click="SearchPatientInfo_Click"  />
                    <Label Content="Фамилия" HorizontalAlignment="Left" VerticalAlignment="Center" />
                    <Label Content="Имя"  HorizontalAlignment="Left" VerticalAlignment="Center" />
                    <Label Content="Отчество"  HorizontalAlignment="Left" VerticalAlignment="Center"  />
                    <Label Content="День рождения"  HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Label Content="Последнее посещение" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Label Content="ФИО последнего доктор" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Label Content="Диагноз" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Label Content="Лечение" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                </StackPanel>
                <StackPanel Grid.Column="3" Grid.Row="1" Grid.RowSpan="2" VerticalAlignment="Bottom">
                    <TextBox Text="{Binding InfoPatient.NamePatient}" IsReadOnly="True" Margin="0,5,15,0" VerticalAlignment="Center"  HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding InfoPatient.LastNamePatient}" IsReadOnly="True" Margin="0,10,15,0"  HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding InfoPatient.MiddleNamePatient}" IsReadOnly="True" Margin="0,10,15,0"   HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding InfoPatient.BirthdayPatient}" IsReadOnly="True" Margin="0,5,15,0"   HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding InfoPatient.LastAppointmentPatient}" IsReadOnly="True" HorizontalAlignment="Left" Width="350" VerticalAlignment="Center"  Margin="0, 5, 15, 5"/>
                    <TextBox  Text="{Binding LastDoctorFullName}" IsReadOnly="True" HorizontalAlignment="Left" Width="350" Margin="0, 5, 15, 5"/>
                    <TextBox Text="{Binding InfoPatient.DiagnosisPatient}" IsReadOnly="True" HorizontalAlignment="Left" Width="350" VerticalAlignment="Center"  Margin="0, 5, 15, 5"/>
                    <TextBox Text="{Binding InfoPatient.RecomendationsPatient}" IsReadOnly="True" HorizontalAlignment="Left" Width="350" Margin="0, 5, 15, 5"/>
                </StackPanel>
            </StackPanel>
        </Border>





        <Border Grid.Column="4" Grid.Row="1" BorderBrush="Black" BorderThickness="2" Margin="5">
            <StackPanel Orientation="Horizontal">

                <StackPanel>
                    <Label Content="Фамилия" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0, 5, 15, 0"/>
                    <Label Content="Имя"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0, 0, 15, 0"/>
                    <Label Content="Отчество"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0, 0, 15, 0" />
                    <Label Content="День рождения"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0, 0, 15, 0"/>
                    <Label Content="Последнее посещение" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0, 0, 15, 0"/>
                    <Label Content="Последний доктор" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0, 5, 15, 0"/>
                    <Label Content="Диагноз" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0, 0, 15, 0"/>
                    <Label Content="Лечение" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0, 5, 15, 0"/>
                </StackPanel>
                
                <StackPanel>
                    <TextBox Text="{Binding NewPatient.NamePatient}" Margin="0,5,15,0" VerticalAlignment="Center"  HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding NewPatient.LastNamePatient}" Margin="0,10,15,0"  HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding NewPatient.MiddleNamePatient}" Margin="0,10,15,0"   HorizontalAlignment="Left" Width="350"/>
                    <DatePicker SelectedDate="{Binding NewPatient.BirthdayPatient}"  Margin="0,5,15,0"   HorizontalAlignment="Left" Width="350"/>
                    <DatePicker SelectedDate="{Binding NewPatient.LastAppointmentPatient}" HorizontalAlignment="Left" Width="350" VerticalAlignment="Center"  Margin="0, 5, 15, 5"/>
                    <TextBox Text="{Binding ShowInfoDoctor.Id}" IsReadOnly="True" HorizontalAlignment="Left" Width="350" Margin="0, 5, 15, 5"/>
                    <TextBox Text="{Binding NewPatient.DiagnosisPatient}" HorizontalAlignment="Left" Width="350" VerticalAlignment="Center"  Margin="0, 5, 15, 5"/>
                    <TextBox Text="{Binding NewPatient.RecomendationsPatient}" HorizontalAlignment="Left" Width="350" Margin="0, 5, 15, 5"/>
                    <Button Content="Сохранить" VerticalAlignment="Top" HorizontalAlignment="Right" Height="30" Width="110" Margin="0, 5, 20, 0" Click="SaveNewPatient" />
                </StackPanel>
            </StackPanel>
        </Border>




        <Border Grid.Column="4" Grid.Row="2" BorderBrush="Black" BorderThickness="2" Margin="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel VerticalAlignment="Top">
                    <Label Content="Id" FontSize="16" HorizontalAlignment="Left"/>
                </StackPanel>
                
                <StackPanel>
                    <TextBox Text="{Binding SearchPatientIdForChange}" Width="350" Height="20" Margin="5,5,15,5"/>
                    <Button Content="Найти" VerticalAlignment="Top" HorizontalAlignment="Right" Height="30" Width="110" Margin="0, 5, 20, 0" Click="SearchPetientForChange_Click"  />
                </StackPanel>
                
            </StackPanel>
        </Border>




        <Border Grid.Column="4" Grid.Row="3" BorderBrush="Black" BorderThickness="2" Margin="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <Label Content="Фамилия" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0, 5, 15, 0"/>
                    <Label Content="Имя"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0, 0, 15, 0"/>
                    <Label Content="Отчество"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0, 0, 15, 0" />
                    <Label Content="День рождения"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0, 0, 15, 0"/>
                    <Label Content="Последнее посещение" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0, 0, 15, 0"/>
                    <Label Content="Диагноз" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0, 0, 15, 0"/>
                    <Label Content="Лечение" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0, 5, 15, 0"/>
                </StackPanel>

                <StackPanel>
                    <TextBox  Text="{Binding EditPatient.NamePatient}" Margin="0,5,15,0" VerticalAlignment="Center"  HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding EditPatient.LastNamePatient}" Margin="0,10,15,0"  HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding EditPatient.MiddleNamePatient}" Margin="0,10,15,0"   HorizontalAlignment="Left" Width="350"/>
                    <DatePicker SelectedDate="{Binding EditPatient.BirthdayPatient}"  Margin="0,5,15,0"   HorizontalAlignment="Left" Width="350"/>
                    <DatePicker SelectedDate="{Binding EditPatient.LastAppointmentPatient}" HorizontalAlignment="Left" Width="350" Margin="0, 5, 15, 5"/>
                    <TextBox  Text="{Binding EditPatient.DiagnosisPatient}"  HorizontalAlignment="Left" Width="350" VerticalAlignment="Center"  Margin="0, 5, 15, 5"/>
                    <TextBox Text="{Binding EditPatient.RecomendationsPatient}" HorizontalAlignment="Left" Width="350" Margin="0, 5, 15, 5"/>
                </StackPanel>

            </StackPanel>
        </Border>

       

        <StackPanel  Grid.Column="5" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 5, 20, 0">
            <Button Content="Сохранить изменения" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="30" Width="150" Margin="0, 0, 5, 0" Click="Savechange"  />
            <Button Content="Сбросить изменения" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="30" Width="150" Click="BackInfo" />
        </StackPanel>









        <Border Grid.Column="0" Grid.Row="4" BorderBrush="Black" BorderThickness="2" Margin="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <Label Content="Всего"/>
                    <Label Content="Докторов"/>
                    <Label Content="Пациент" />
                </StackPanel>

                <StackPanel>
                    <TextBox Text="{Binding CountTotal}" IsReadOnly="True"  Margin="5,5,15,5" HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding CountDoctor}" IsReadOnly="True" Margin="5,5,15,5" HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding CountPatiet}" IsReadOnly="True"  Margin="5,5,15,5" HorizontalAlignment="Left" Width="350"/>
                </StackPanel>
            </StackPanel>
        </Border>






      

       

       
    </Grid>
</Window>
